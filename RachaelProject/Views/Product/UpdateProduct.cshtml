@model ProductModel

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateProductToDatabase", "ProductModel", "Post"))
{
    <input asp-for="ProductId" type="hidden" value="@Model.ProductId" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Breed" class="control-label">Breed</label>
    <input type="text" step="0.01" name="Breed" class="form-control" value="@Model.Breed" />

    <label asp-for="Age" class="control-label">Age</label>
    <input type="number" step="0.01" name="Age" class="form-control" value="@Model.Age" />

    <label asp-for="FavToy" class="control-label">FavToy</label>
    <input type="text" step="0.01" name="FavToy" class="form-control" value="@Model.FavToy" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" step="0.01" name="Description" class="form-control" value="@Model.Description" />

    <input type="submit" value="Update Product" class="btn btn-primary" />
}
