@model IEnumerable<RachaelProject.Models.ProductModel>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container d-flex flex-wrap">

    @foreach (var item in Model)
    {
        <!--I created a column in MySQL for images of the dogs. I need to figure out how to properly point to the column in the foreach loop.-->
        <div class="card" style="width: 18rem;">
            <img src="https://loremflickr.com/200/200/@item.Breed?lock=@item.Breed" class="card-img-top" alt="@item.Breed">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Breed</p>
                <p class="card-text">Age: @item.Age</p>
                <p class="card-text">Favorite toy: @item.FavToy</p>
                <p class="card-text">@item.Description</p>
                <a href="/contactlist/InsertContact/@item.ProductId" class="btn btn-primary">Adopt Me!</a>
            </div>
        </div>
    }
</div>
    


